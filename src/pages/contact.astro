---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<BaseLayout title="Contact - VK">
  <Header />
  
  <main class="min-h-screen bg-gradient-to-br from-gray-50 to-white">
    <div class="max-w-4xl mx-auto px-6 py-20">
      <div class="text-center mb-16">
        <h1 class="text-5xl font-bold text-gray-900 mb-4">Get in Touch</h1>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto">
          Have questions about engineering leadership? Want to share your own experiences? I'd love to hear from you.
        </p>
      </div>
      
      <div class="max-w-2xl mx-auto">
        <!-- Contact Methods -->
        <div class="space-y-8">
          <div class="bg-white p-8 rounded-xl shadow-lg">
            <h2 class="text-2xl font-semibold text-gray-900 mb-6">Ways to Connect</h2>
            
            <div class="space-y-6">
              <div class="flex items-start gap-4">
                
                <div>
                  <h3 class="text-lg font-semibold text-gray-900 mb-2">LinkedIn</h3>
                  <p class="text-gray-600 mb-3">Best for professional discussions and networking</p>
                  <a 
                    href="https://www.linkedin.com/in/kvishalv" 
                    class="inline-block bg-blue-600 text-white px-4 py-2 rounded-lg text-sm font-semibold hover:bg-blue-700 transition-colors"
                  >
                    Connect on LinkedIn
                  </a>
                </div>
              </div>
              
              <div class="flex items-start gap-4">
               
                <div>
                  <h3 class="text-lg font-semibold text-gray-900 mb-2">GitHub</h3>
                  <p class="text-gray-600 mb-3">Check out my code and technical projects</p>
                  <a 
                    href="https://github.com/kvishalv" 
                    class="inline-block bg-gray-800 text-white px-4 py-2 rounded-lg text-sm font-semibold hover:bg-gray-900 transition-colors"
                  >
                    View GitHub
                  </a>
                </div>
              </div>
            </div>
          </div>
          
          <div class="bg-white p-8 rounded-xl shadow-lg">
            <h2 class="text-2xl font-semibold text-gray-900 mb-6">What I'm Looking For</h2>
            <ul class="space-y-3 text-gray-600">
              <li class="flex items-start gap-3">
                <span class="text-green-500 mt-1">✓</span>
                <span>Engineering leadership discussions and advice</span>
              </li>
              <li class="flex items-start gap-3">
                <span class="text-green-500 mt-1">✓</span>
                <span>Sharing experiences and lessons learned</span>
              </li>
              <li class="flex items-start gap-3">
                <span class="text-green-500 mt-1">✓</span>
                <span>Collaboration on technical projects</span>
              </li>
              <li class="flex items-start gap-3">
                <span class="text-green-500 mt-1">✓</span>
                <span>Speaking opportunities and workshops</span>
              </li>
            </ul>
          </div>
        </div>
        
      </div>
      
      <!-- Response Time -->
      <div class="mt-16 text-center">
        <div class="bg-white p-8 rounded-xl shadow-lg max-w-2xl mx-auto">
          <h3 class="text-xl font-semibold text-gray-900 mb-4">Response Time</h3>
          <p class="text-gray-600">
            I typically respond to messages within 24-48 hours. For urgent matters, 
            LinkedIn is usually the fastest way to reach me.
          </p>
        </div>
      </div>
    </div>
  </main>

  <Footer />
</BaseLayout>
