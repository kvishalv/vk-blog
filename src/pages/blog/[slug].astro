---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('posts', ({ data }) => {
    return !data.draft;
  });
  
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();
---

<BaseLayout title={post.data.title + " - VK"} description={post.data.description}>
  <Header />
  
  <main class="min-h-screen bg-white">
    <article class="max-w-4xl mx-auto px-6 py-20">
      <!-- Article Header -->
      <header class="mb-12">
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6 leading-tight">
          {post.data.title}
        </h1>
        
        <div class="flex items-center gap-6 text-gray-600 mb-8">
          <span>By {post.data.author}</span>
          <span>•</span>
          <time datetime={post.data.date.toISOString()}>
            {post.data.date.toLocaleDateString('en-US', { 
              year: 'numeric', 
              month: 'long', 
              day: 'numeric' 
            })}
          </time>
          {post.data.tags && (
            <>
              <span>•</span>
              <div class="flex gap-2">
                {post.data.tags.map(tag => (
                  <span class="px-3 py-1 bg-gray-100 text-gray-700 rounded-full text-sm">
                    {tag}
                  </span>
                ))}
              </div>
            </>
          )}
        </div>
        
        <p class="text-xl text-gray-600 leading-relaxed">
          {post.data.description}
        </p>
      </header>
      
      <!-- Article Content -->
      <div class="prose prose-lg max-w-none">
        <Content />
      </div>
      
      <!-- Article Footer -->
      <footer class="mt-16 pt-8 border-t border-gray-200">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-gray-600 mb-2">Written by {post.data.author}</p>
            <p class="text-sm text-gray-500">
              Engineering Management, Unfiltered
            </p>
          </div>
          <div class="flex gap-4">
            <a 
              href="https://www.linkedin.com/in/kvishalv" 
              class="text-gray-400 hover:text-gray-600 transition-colors"
            >
              LinkedIn
            </a>
            <a 
              href="https://github.com/kvishalv" 
              class="text-gray-400 hover:text-gray-600 transition-colors"
            >
              GitHub
            </a>
          </div>
        </div>
      </footer>
    </article>
  </main>

  <Footer />
</BaseLayout>

<style>
  .prose {
    color: #000000;
    line-height: 1.7;
    font-size: 16px;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  }
  
  .prose h1,
  .prose h2,
  .prose h3,
  .prose h4 {
    color: #000000;
    font-weight: 700;
    margin-top: 2.5rem;
    margin-bottom: 1rem;
    line-height: 1.3;
  }
  
  .prose h2 {
    font-size: 3.25rem;
    border-bottom: 1px solid #e5e7eb;
    padding-bottom: 0.5rem;
    margin-top: 3rem;
    margin-bottom: 0 !important;
  }
  
  .prose h3 {
    font-size: 1.25rem;
    margin-top: 2.5rem;
  }
  
  .prose p {
    margin-bottom: 1.5rem;
    line-height: 1.7;
    color: #000000;
  }
  
  .prose ul,
  .prose ol {
    margin-bottom: 1.5rem;
    padding-left: 1.5rem;
  }
  
  .prose li {
    margin-bottom: 0.5rem;
    line-height: 1.6;
  }
  
  .prose strong {
    font-weight: 600;
    color: #000000;
  }
  
  .prose a {
    color: #000000;
    text-decoration: underline;
    text-decoration-color: #d1d5db;
    text-underline-offset: 2px;
  }
  
  .prose a:hover {
    color: #333333;
    text-decoration-color: #9ca3af;
  }
  
  .prose blockquote {
    border-left: 4px solid #e5e7eb;
    padding-left: 1rem;
    margin: 1.5rem 0;
    font-style: italic;
    color: #666666;
  }
  
  .prose code {
    background-color: #f3f4f6;
    padding: 0.125rem 0.25rem;
    border-radius: 0.25rem;
    font-size: 0.875em;
    color: #000000;
  }
  
  .prose pre {
    background-color: #1f2937;
    color: #f9fafb;
    padding: 1rem;
    border-radius: 0.5rem;
    overflow-x: auto;
    margin: 1.5rem 0;
  }
  
  .prose pre code {
    background-color: transparent;
    padding: 0;
    color: inherit;
  }
  
  /* Add this to your layout file for additional control */
  .prose p {
    margin-top: 0 !important;
    margin-bottom: 1rem !important;
  }
  
  .prose h1,
  .prose h2,
  .prose h3 {
    margin-bottom: 0 !important;
  }
  
  /* Ensure consistent spacing for numbered lists */
  .prose h3 + p {
    margin-top: 0 !important;
  }
</style>
