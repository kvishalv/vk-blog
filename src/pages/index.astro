---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { getCollection } from 'astro:content';

const posts = await getCollection('posts', ({ data }) => {
  return !data.draft;
});

// Sort posts by date, newest first, and take the first 5
const sortedPosts = posts.sort((a, b) => b.data.date.getTime() - a.data.date.getTime()).slice(0, 5);

// SEO optimization for home page
const title = "VK - Engineering Management, Unfiltered";
const description = "Real stories from the trenches of tech leadership. Practical frameworks for engineering managers, 1:1 meeting guides, and team management insights.";
const keywords = "engineering management, tech leadership, 1:1 meetings, team management, software engineering, leadership, management, engineering teams, management frameworks";
---

<BaseLayout 
  title={title}
  description={description}
  keywords={keywords}
  canonical="https://vishal.dev"
>
  <Header />
  
  <!-- Hero Section -->
  <section class="py-20 flex items-center justify-center text-center relative bg-gradient-to-br from-gray-50 to-white">
    <!-- Decorative Elements -->
    <div class="absolute top-10 left-10 w-24 h-24 bg-gradient-to-br from-pink-400 to-orange-400 rounded-full opacity-80 transform rotate-12"></div>
    <div class="absolute top-16 right-16 w-20 h-20 bg-gradient-to-br from-cyan-400 to-blue-400 rounded-full opacity-80 transform -rotate-12"></div>
    <div class="absolute bottom-16 left-20 w-16 h-16 bg-gradient-to-br from-green-400 to-yellow-400 rounded-full opacity-80 transform rotate-45"></div>
    
    <div class="max-w-4xl px-6 relative z-10">
      <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4 leading-tight">
        Engineering Management, Unfiltered
      </h1>
      <p class="text-lg md:text-xl text-gray-600 mb-8 max-w-3xl mx-auto leading-relaxed">
        I'm Vishal, and I believe engineering leadership doesn't have to be complicated. Through honest stories and hard-learned lessons, I help leaders build teams that actually work.
      </p>
      <a href="/blog" class="inline-block bg-black text-white px-6 py-3 rounded-lg text-base font-semibold hover:bg-gray-800 transition-colors">
        Read My Posts â†’
      </a>
    </div>
  </section>

  <!-- Featured Content -->
  <section class="py-20 bg-gray-50">
    <div class="max-w-6xl mx-auto px-6">
      <h2 class="text-5xl font-bold text-gray-900 text-center mb-12">What I'm Writing About</h2>
      
      <div class="max-w-4xl mx-auto space-y-6">
        {sortedPosts.map((post) => (
          <article class="bg-white p-6 rounded-lg border border-gray-200 hover:border-gray-300 hover:shadow-md transition-all duration-200">
            <div class="flex items-start justify-between">
              <div class="flex-1">
                <h3 class="text-xl font-semibold text-gray-900 mb-2 hover:text-gray-700 transition-colors">
                  <a href={"/blog/" + post.slug}>{post.data.title}</a>
                </h3>
                <p class="text-gray-600 text-sm leading-relaxed">
                  {post.data.description}
                </p>
              </div>
              <span class="text-xs text-gray-400 ml-4 whitespace-nowrap">
                {post.data.date.toLocaleDateString('en-US', { 
                  month: 'short', 
                  day: 'numeric' 
                })}
              </span>
            </div>
          </article>
        ))}
        
        <div class="text-center pt-4">
          <a href="/blog" class="inline-block bg-black text-white px-6 py-3 rounded-lg text-sm font-semibold hover:bg-gray-800 transition-colors">
            View All Posts â†’
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- About Preview -->
  <section class="py-20 bg-white">
    <div class="max-w-6xl mx-auto px-6">
      <div class="grid lg:grid-cols-2 gap-16 items-center">
        <div>
          <h2 class="text-4xl font-bold text-gray-900 mb-6">About Me</h2>
          <p class="text-lg text-gray-600 mb-6 leading-relaxed">
            I'm an engineering leader who's been in the trenches of tech management for over a decade. I've made every mistake in the book, learned from them, and now I share those lessons with other leaders.
          </p>
          <p class="text-lg text-gray-600 mb-8 leading-relaxed">
            My approach is simple: no corporate fluff, no buzzwords, just honest experiences and practical advice that actually works in the real world.
          </p>
          <a href="/about" class="inline-block bg-black text-white px-8 py-4 rounded-lg text-lg font-semibold hover:bg-gray-800 transition-colors">
            Learn More About My Journey
          </a>
        </div>
        
        <div class="flex justify-center">
          <img 
            src="https://github.com/kvishalv.png" 
            alt="Vishal Kannankara" 
            class="w-80 h-80 rounded-xl shadow-lg object-cover"
          />
        </div>
      </div>
    </div>
  </section>

  <!-- Resources -->
  <section class="py-20 bg-gray-50">
